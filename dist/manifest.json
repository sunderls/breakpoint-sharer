{
	"name": "Breakpoint Sharer",
	"description": "a breakpoint sharer",
	"version": "0.1",
	"permissions": [
		"debugger", "tabs"
	],
	"background": {
		"scripts": [
			"js/bg.js"
		]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Breakpoint Sharer",
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}
